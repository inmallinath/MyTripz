<!DOCTYPE html>
<html>
<head>
    <title>My Tripz - @ViewBag.Title</title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/CSS/site.css" />
</head>
<body>
    <div id="sidebar">
        <img src="~/img/user1.png" alt="my image" class="headshot">
        <span id="username"> Mallinath Nagaraj</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle Menu</button>
            </div>
            <div>
                @RenderBody();
            </div>
        </div>
        <div id="footer">
            &copy; 2016 My Tripz
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>

    @RenderSection("Scripts", false)
</body>

</html>
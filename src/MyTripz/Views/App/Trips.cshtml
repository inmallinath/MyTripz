@model IEnumerable<MyTripz.Models.Trip>
@{ 
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-md-6">
        <h1>My Tripz</h1>
        <p>Welcome to my Tripz!!</p>

        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control"/>
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control"/>
            </div>
            <div><input type="submit" value="Add" class="btn btn-success"/></div>
        </form>
    </div>

    <div class="col-md-6">
        <h2>Map Goes Here </h2>
        <ul>
            @foreach (var trip in Model)
            {
                <li>@trip.Name (@trip.Created.ToShortDateString())</li>
            }
        </ul>

    </div>
 </div>
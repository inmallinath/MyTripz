@{ 
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <title>My Tripz - @ViewBag.Title</title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="CSS/site.css" />
</head>
<body>
    <div id="sidebar">
        <img src="img/user1.png" alt="my image" class="headshot">
        <span id="username"> Mallinath Nagaraj</span>
        <ul class="menu">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle Menu</button>
            </div>
            <h2>My Tripz</h2>
            <h3>Welcome to my Tripz</h3>
            <form>
                <div>
                    <label>Date</label>
                    <input />
                </div>
                <div>
                    <label>Location</label>
                    <input />
                </div>
                <input type="submit" value="Add" />
            </form>
        </div>
        <div id="footer">
            &copy; 2016 My Tripz
        </div>
    </div>

    <script type="text/javascript" src="lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="js/site.js"></script>

</body>

</html>